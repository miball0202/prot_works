<div class="jumbotron">
  <h3><%= @review.title %></h3>
  <br>
  <hr>

    <p><%= @review.content %></p>
  <br><br><br><br><br>
</div>
<% if @review.user_id == current_user.id %>
  <div class="text-right">
    <%= link_to "レビュー編集", edit_prot_review_path(@review), class: "btn btn-success" %>
    <%= link_to "レビュー削除", prot_review_path(@review), method: :delete, class: "btn btn-danger", data: { confirm: "よろしいですか？"} %>
  </div>
<% end %>
