<div class="container-fluid">
  <%= link_to "プロフィール編集", mypage_edit_path %>　/　
  <%= link_to "プロフィール確認", user_path(current_user)%>
</div>

  <div class="box11">
    <br>
    <div class="row">
      <div class="offset-1 col-7">
        <h1><%= current_user.name %></h1>
        <h2><%= current_user.nick_name %></h2>
        <p>email: <%= current_user.email %></p>
        <br>
      </div>
      <div class="col-4">
        <%= image_tag("gorilla.jpg", height: 100, width: 100, style: "border-radius: 50%;" ) %>
      </div>
    </div>
  </div>

  <br>
  <div class="box2">
    <br>
    <h3>プロット一覧</h3>

    <hr>
    <br>
    <div class="row">
      <% current_user.prots.each do |prot| %>
        <div class="col-lg-3 col-sm-12 col-md-6">
          <div class="card text-white border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header"><%= link_to prot.title, prot ,class: "text-secondary" %></div>
            <div class="card-body">
                <%= link_to "Edit Prot", edit_prot_path(prot), class: "btn btn-success" %>
                <%= link_to "Edit Node", prot_nodes_path(prot), class: "btn btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <div class="box2">
    <% if current_user.reviews.present? %>
    <br>
      <h3>レビュー一覧</h3>
      <hr>
      <div class="row">
        <% current_user.reviews.each do |review| %>
          <div class="col-lg-3 col-sm-12 col-md-6">
            <div class="card text-white border-dark mb-3" style="max-width: 18rem;">
              <div class="card-header"><%= link_to review.title, prot_review_path(review.prot_id, review) ,class: "text-secondary" %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
