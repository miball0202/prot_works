<div class="container">
  <%= form_with(model: current_user, local: true, url: "/mypage/update") do |f| %>
    <% if current_user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(current_user.errors.count, "件のエラー") %>があります</h2>

        <ul>
        <% current_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <br>
    <div class="icon-preview">
      <% if current_user.icon.blank? %>
        <%= image_tag("f_f_object_115_s512_f_object_115_0bg.png", height: 100, width: 100, style: "border-radius: 50%;", id: "preview_icon" ) %>
      <% else %>
        <%= image_tag current_user.icon.url, height: 100, width: 100, style: "border-radius: 50%;", id: "preview_icon" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :icon %><br>
      <%= f.file_field :icon, id: "icon_input" %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :nick_name %><br>
      <%= f.text_field :nick_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :profile %><br>
      <%= f.text_area :profile,rows: 15, class: "form-control" %>
    </div>

  <br>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
  <br>
  <br>

  <%= link_to "戻る", root_path, class: "btn btn-primary" %>
  <br>
  <br>
  <br>
</div>
