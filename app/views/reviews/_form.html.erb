<%= form_with(model: review, local: true, url: choose_new_or_edit) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %>件のエラーがあります</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content,rows: 15, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.hidden_field :prot_id, value: params[:prot_id] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
