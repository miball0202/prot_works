<%= form_with(model: current_user, local: true, url: "/mypage/update") do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(current_user.errors.count, "件のエラー") %>があります</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :nick_name %><br>
    <%= f.text_field :nick_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile,rows: 15, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
