<%= form_with(model: @user, local: true, url: "/mypage/update") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "件のエラー") %>があります</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :nick_name %><br>
    <%= f.text_field :nick_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile,rows: 15, class: "form-control" %>
  </div>

<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
